# vim:syntax=apparmor
# aspell permissions

  # per-user settings and dictionaries
  owner @{HOME}/.aspell.*.{pws,prepl} rwk,

  # system libraries and dictionaries
  /usr/lib/aspell/ r,
  /usr/lib/aspell/* r,
  /usr/lib/aspell/*.so m,
  /usr/share/aspell/ r,
  /usr/share/aspell/* r,
  /var/lib/aspell/* r,
