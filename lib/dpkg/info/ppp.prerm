#!/bin/sh
set -e

# If we are removing ppp we have to stop all ppp's

if [ "$1" = remove ]; then
  echo -n "Stopping all PPP connections..."
  start-stop-daemon --stop --oknodo --quiet --exec /usr/sbin/pppd || true
  echo "done."
fi

